<UserControl x:Class="Кинотеатры_Тепляков.Elements.Item_cinema"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Кинотеатры_Тепляков.Elements"
             mc:Ignorable="d">
    <Grid Background="White" Margin="10,10,10,10" Height="200" VerticalAlignment="Top">
        <Label Content="Кинотеатр" x:Name="nameCinema" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="24" FontWeight="Bold"/>
        <Label Content="Количество залов" x:Name="countHall" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,65,0,0" FontSize="20"/>
        <Label Content="Количество мест" x:Name="countPlace" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" FontSize="20"/>
        <Button Content="Изменить" Click="Change" Margin="0,0,120,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="25"/>
        <Button Content="Удалить" Click="Delete" Margin="0,0,10,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="25"/>
    </Grid>
</UserControl>
