<Page x:Class="Кинотеатры_Тепляков.Pages.Cinema"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Кинотеатры_Тепляков.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Cinema">

    <Grid Background="#FF4C4C4C">
        <Grid VerticalAlignment="Top" MinHeight="80" Background="#FF6B4DDB">
            <Label Content="Кинотеатры" Foreground="White" FontFamily="Corbel" FontSize="36" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,11,0,0"/>
        </Grid>
        <Grid Margin="0,80,0,50">
            <ScrollViewer Margin="10,10,10,10">
                <StackPanel x:Name="parrent"/>
            </ScrollViewer>
        </Grid>
        <Grid VerticalAlignment="Bottom" MinHeight="50">
            <Button Click="AddNewCinema" Content="Добавить" Width="120" Height="25" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Button Click="PosterWin" Content="Афиши" Width="120" Height="25" HorizontalAlignment="Left" Margin="140,0,0,0" x:Name="BtnRange"/>
        </Grid>
    </Grid>
</Page>
